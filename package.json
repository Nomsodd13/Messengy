{
  "name": "messengy",
  "productName": "Messengy",
  "version": "0.1.0",
  "description": "A lightweight desktop wrapper for Messenger with Liquid Glass UI and system integration.",
  "homepage": "https://github.com/nomsodd/messengy",
  "author": {
    "name": "Nomsodd",
    "email": "nomsodd@example.com"
  },
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win64": "electron-builder --win --x64",
    "dist:linux": "electron-builder --linux",
    "release": "yarn dist:mac && yarn dist:win64 && yarn dist:linux"
  },
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^6.6.2",
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.nomsodd.messengy",
    "productName": "Messengy",
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "nomsodd",
        "repo": "messengy"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.social-networking"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/linux-icons",
      "maintainer": "Nomsodd <nomsodd@example.com>",
      "category": "Network;Chat"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
