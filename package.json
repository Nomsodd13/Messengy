{
  "name": "messengy",
  "productName": "Messengy",
  "version": "0.1.1",
  "description": "A lightweight desktop wrapper for Messenger.",
  "main": "src/main.js",
  "homepage": "https://github.com/Nomsodd13/Messengy",
  "author": { "name": "Nomsodd", "email": "nomsodd@example.com" },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.nomsodd.messengy",
    "productName": "Messengy",
    "asar": true,

    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns",
      "category": "public.app-category.social-networking",
      "artifactName": "Messengy-${version}-mac-${arch}.${ext}"
    },

    "win": {
      "icon": "assets/icon.ico",
      "target": [
        { "target": "nsis", "arch": ["x64", "arm64"] }
      ],
      "artifactName": "Messengy-${version}-win-${arch}.${ext}"
    },

    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/linux-icons",
      "category": "Network;Chat",
      "maintainer": "Nomsodd <nomsodd@example.com>",
      "artifactName": "Messengy-${version}-linux-${arch}.${ext}"
    },

    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },

    "publish": [
      { "provider": "github", "owner": "Nomsodd13", "repo": "Messengy" }
    ]
  }
}